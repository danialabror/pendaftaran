<link href="css/style.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<div class="container">
      <div class="row">
            <div class="col-md-6">
                  <div class="card mt-5 bg-light shadow-lg p-3 mb-5 bg-white rounded"> <br>
                        <div class="card-body">
                              <h4 class="card-title">Keterangan Kesehatan</h4> <hr>
                              <%= form_tag({:controller => "kesehatans", :action => "store"}) do |f| %>   
                                    <div class="form-group">
                                          <h6><%= label_tag :tbc, "TBC" %></h6>
                                          <%= select_tag :tbc, options_for_select(['Tidak Pernah', 'Pernah']),class:'form-control'  %>  
                                    </div> 
                                    <div class="form-group">
                                        <h6><%= label_tag :malaria, "Malaria" %></h6>
                                          <%= select_tag :malaria, options_for_select(['Tidak Pernah', 'Pernah']),class:'form-control'  %>  
                                    </div> 

                                    <div class="form-group">
                                        <h6><%= label_tag :chotipa, "Chotipa" %></h6>
                                          <%= select_tag :chotipa, options_for_select(['Tidak Pernah', 'Pernah']),class:'form-control'  %>      
                                    </div> 

                                    <div class="form-group">
                                        <h6><%= label_tag :cacar, "Cacar" %></h6>
                                          <%= select_tag :cacar, options_for_select(['Tidak Pernah', 'Pernah']),class:'form-control'  %>        
                                    </div> 

                                    <div class="form-group">
                                       <h6><%= label_tag :lainnya, "Lainnya" %></h6>   <br>
                                        <%= text_field_tag :lainnya, " ", class: 'form-control' %>       
                                    </div> 

                                    <div class="form-group">
                                        <h6><%= label_tag :kelainan_jasmani, "Kelainan Jasmani" %></h6>   <br>
                                        <%= text_field_tag :kelainan_jasmani, " ", class: 'form-control' %>       
                                    </div> 

                                    <%= submit_tag "Next",class:'btn btn-primary btn-lg'%>   
                              <% end %>
                        </div>
                  </div>
            </div>
             <div class="col-md-6">
                  <br><br><br><br>
                 <%= image_tag  "kesehatan.svg" %>
            </div>
      </div>
</div>
