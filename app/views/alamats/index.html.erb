<link href="css/style.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<div class="container">
      <div class="row">
            <div class="col-md-6 ">
                  <div class="card mt-5 bg-light shadow-lg p-3 mb-5 bg-white rounded">
                        <div class="card-body">
                              <h4 class="card-title">Alamat Siswa</h4>
                              <%= form_tag({:controller => "alamats", :action => "store"}) do |f| %>   
                                    <div class="form-group">
                                          <%= label_tag :kp, "kp" %>   <br>
                                          <%= text_field_tag :kp, " ", class: 'form-control' %>    
                                    </div> 
                                    <div class="form-group">
                                        <%= label_tag :rt, "rt" %>   <br>
                                        <%= number_field_tag :rt, " ", class: 'form-control' %>    
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :rw, "rw" %>   <br>
                                        <%= number_field_tag :rw, " ", class: 'form-control' %>    
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :kelurahan, "kelurahan" %>   <br>
                                        <%= text_field_tag :kelurahan, " ", class: 'form-control' %>       
                                    </div> 

                                    <div class="form-group">
                                       <%= label_tag :kecamatan, "kecamatan" %>   <br>
                                        <%= text_field_tag :kecamatan, " ", class: 'form-control' %>       
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :kotakabupaten, "kotakabupaten" %>   <br>
                                        <%= text_field_tag :kotakabupaten, " ", class: 'form-control' %>       
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :provinsi, "provinsi" %>   <br>
                                        <%= text_field_tag :provinsi, " ", class: 'form-control' %>     
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :kodepos, "kodepos" %>   <br>
                                        <%= text_field_tag :kodepos, " ", class: 'form-control' %>     
                                    </div> 

                                    <div class="form-group">
                                        <%= label_tag :telp_rumah, "telp_rumah" %>   <br>
                                        <%= text_field_tag :telp_rumah, " ", class: 'form-control' %>      
                                    </div> 
                                    <div class="form-group">
                                      <%= label_tag :email, "email" %>   <br>
                                        <%= text_field_tag :email, " ", class: 'form-control' %>     
                                    </div> 

                                    <div class="form-group">
                                      <%= label_tag :tinggal_dengan, "tinggal_dengan" %>   <br>
                                        <%= text_field_tag :tinggal_dengan, " ", class: 'form-control' %>     
                                    </div> 

                                    <%= submit_tag "Next",class:'btn btn-primary btn-lg'%>   
                              <% end %>
                        </div>
                  </div>
            </div>
            <div class="col-md-6">
            <br><br><br><br>
                 <%= image_tag  "alamat.svg" %>
            </div>
      </div>
</div>

